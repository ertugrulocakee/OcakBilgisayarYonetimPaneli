@using MVCTeknolojikMarketYonetimPaneli.Models.EkModel;


@model Tuple<ZamanaGoreGelir,ZamanaGoreGider,KarZarar>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="panel-group">
    <label>ŞUBENİN GELİR-GİDER BİLGİLERİ</label>

    <br/>

    <div class="panel panel-success">
        <div class="panel-heading">Şubenin bu aylık geliri</div>
        <div class="panel-body">@Model.Item1.AylikGelir</div>

    </div>
    <div class="panel panel-danger">
        <div class="panel-heading">Şubenin bu aylık gideri</div>
        <div class="panel-body">@Model.Item2.AylikGider</div>

    </div>

    <div class="panel panel-warning">
        <div class="panel-heading">Şubenin bu aylık kar-zarar bilgisi</div>
        <div class="panel-body">@Model.Item3.AylikKarZarar</div>

    </div>

    <br/>

    <div class="panel panel-success">
        <div class="panel-heading">Şubenin bu yıllık geliri</div>
        <div class="panel-body">@Model.Item1.YillikGelir</div>

    </div>
    <div class="panel panel-danger">
        <div class="panel-heading">Şubenin bu yıllık gideri</div>
        <div class="panel-body">@Model.Item2.YillikGider</div>

    </div>

    <div class="panel panel-warning">
        <div class="panel-heading">Şubenin bu yıllık kar-zarar bilgisi</div>
        <div class="panel-body">@Model.Item3.YillikKarZarar</div>

    </div>

    <br />

    <div class="panel panel-success">
        <div class="panel-heading">Şubenin şu ana kadar olan toplam geliri</div>
        <div class="panel-body">@Model.Item1.ToplamGelir</div>

    </div>
    <div class="panel panel-danger">
        <div class="panel-heading">Şubenin şu ana kadar olan toplam gideri</div>
        <div class="panel-body">@Model.Item2.ToplamGider</div>

    </div>

    <div class="panel panel-warning">
        <div class="panel-heading">Şubenin şu ana kadar olan kar-zarar bilgisi</div>
        <div class="panel-body">@Model.Item3.KarZararDengesi</div>

    </div>


</div>

   
<br/>

   


<a href="/GelirGider/GelirEkle/" class="btn btn-success">Gelir Ekle</a> 

<a href="/GelirGider/GiderEkle/" class="btn btn-success">Gider Ekle</a>
