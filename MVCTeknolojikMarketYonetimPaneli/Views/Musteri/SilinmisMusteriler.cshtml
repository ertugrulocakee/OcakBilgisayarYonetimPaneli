@using MVCTeknolojikMarketYonetimPaneli.Models.Model

@using PagedList
@using PagedList.Mvc

@model PagedList.IPagedList<TBL_MUSTERI>

@{
    ViewBag.Title = "SilinmisMusteriler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("SilinmisMusteriler", "Musteri", FormMethod.Get))
{

    <p>

        Müşteri Ad @Html.TextBox("ad")

        Müşteri Soyad @Html.TextBox("soyad")

        <input type="submit" value="Ara" class="btn-info" />


    </p>


}


<table class="table table-hover">

    <tr>

        <th>MÜŞTERİ AD</th>
        <th>MÜŞTERİ SOYAD</th>
        <th>ŞUBE</th>
        <th>TELEFON</th>
        <th>MAIL</th>
        <th>TC</th>
        <th>CİNSİYET</th>
        <th>YAŞ</th>
        <th>İŞLEMLER</th>

    </tr>


    @foreach (var x in Model)
    {

        <tr>


            <td>@x.MUSTERIAD</td>
            <td>@x.MUSTERISOYAD</td>
            <td>@x.TBL_SUBE.SUBEAD</td>
            <td>@x.MUSTERITELEFON</td>
            <td>@x.MUSTERIMAIL</td>
            <td>@x.MUSTERITC</td>
            <td>@x.MUSTERICINSIYET</td>
            <td>@x.MUSTERIYAS</td>

            <td>
                <a href="/Musteri/MusteriyiGeriGetir/@x.MUSTERIID" class="btn btn-success">Geri Getir</a>            
            </td>



        </tr>


    }






</table>

@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("SilinmisMusteriler", new { sayfa }))




