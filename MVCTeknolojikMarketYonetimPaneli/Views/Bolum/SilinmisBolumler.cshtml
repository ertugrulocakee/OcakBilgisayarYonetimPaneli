@using MVCTeknolojikMarketYonetimPaneli.Models.Model

@using PagedList
@using PagedList.Mvc

@model PagedList.IPagedList<TBL_BOLUM>

@{
    ViewBag.Title = "SilinmisBolumler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("SilinmisBolumler", "Bolum", FormMethod.Get))
{

    <p>

        Bölüm Ad @Html.TextBox("ad")
       
        <input type="submit" value="Ara" class="btn-info" />


    </p>

}


<table class="table table-hover">

    <tr>

        <th>BÖLÜM</th>
        <th>İŞLEMLER</th>

    </tr>


    @foreach (var x in Model)
    {

        <tr>


            <td>@x.BOLUMAD</td>
         

            <td>
                <a href="/Bolum/BolumuGeriGetir/@x.BOLUMID" class="btn btn-success">Geri Getir</a>
            </td>



        </tr>


    }






</table>

@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("SilinmisBolumler", new { sayfa }))








