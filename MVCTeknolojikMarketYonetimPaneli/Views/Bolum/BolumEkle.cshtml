@model MVCTeknolojikMarketYonetimPaneli.Models.Model.TBL_BOLUM

@{
    ViewBag.Title = "BolumEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (ViewBag.Message != null)
{
    <script type="text/javascript">

        window.onload = function () {
            alert('@ViewBag.Message');
        };
    </script>
} 


<form class="form-group" method="post">

    <label>Eklemek istediğiniz bölümün adını giriniz.</label>
    @Html.TextBoxFor(m => m.BOLUMAD, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.BOLUMAD, "", new { @style = "color:red" })


<br />

<button class="btn btn-success">Bölüm Kaydet/Ekle</button>


</form>
