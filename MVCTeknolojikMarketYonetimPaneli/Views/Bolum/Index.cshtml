@using MVCTeknolojikMarketYonetimPaneli.Models.Model

@using PagedList
@using PagedList.Mvc

@model PagedList.IPagedList<TBL_BOLUM>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Index", "Bolum", FormMethod.Get))
{

    <p>

        Bölüm Ad @Html.TextBox("ad")

        <input type="submit" value="Ara" class="btn-info" />


    </p>


}

<div class="table-responsive">

    <table class="table table-hover">

        <tr>

            <th>BÖLÜM</th>     
            <th>İŞLEMLER</th>

        </tr>


        @foreach (var x in Model)
        {

            <tr>


                <td>@x.BOLUMAD</td>
             

                <td>
                    <a href="/Bolum/BolumSil/@x.BOLUMID" class="btn btn-danger">Sil</a>
                    <a href="/Bolum/BolumGuncelle/@x.BOLUMID" class="btn btn-success">Güncelle</a>
                </td>



            </tr>


        }






    </table>

</div>


@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))

<a href="/Bolum/BolumEkle/" class="btn btn-success"> Ekle</a>

<a href="/Bolum/SilinmisBolumler/" class="btn btn-danger">Silinmiş Bölümler</a>
