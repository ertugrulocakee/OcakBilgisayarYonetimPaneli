@using MVCTeknolojikMarketYonetimPaneli.Models.Model

@using PagedList
@using PagedList.Mvc


@model PagedList.IPagedList<TBL_KATEGORI>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm("Index", "Kategori", FormMethod.Get))
{

    <p>

        Kategori Ad @Html.TextBox("ad")

      

        <input type="submit" value="Ara" class="btn-info" />


    </p>


}


<div class="table-responsive">

<table class="table table-hover">

    <tr>

        <th>KATEGORİ AD</th>
        <th>İŞLEMLER</th>
   
    </tr>


    @foreach (var x in Model)
    {

        <tr>


            <td>@x.KATEGORIAD</td>
     

            <td>
                <a href="/Kategori/KategoriSil/@x.KATEGORIID" class="btn btn-danger">Sil</a>
                <a href="/Kategori/KategoriGetir/@x.KATEGORIID" class="btn btn-success">Güncelle</a>
            </td>



        </tr>


    }






</table>
    </div>

@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))

<a href="/Kategori/YeniKategori/" class="btn btn-success">Kategori Ekle</a>

<a href="/Kategori/SilinmisKategoriler/" class="btn btn-danger">Silinmiş Kategoriler</a>






