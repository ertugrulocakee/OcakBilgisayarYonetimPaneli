@model MVCTeknolojikMarketYonetimPaneli.Models.Model.TBL_KATEGORI

@{
    ViewBag.Title = "YeniKategori";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.Message != null)
{
    <script type="text/javascript">

        window.onload = function () {
            alert('@ViewBag.Message');
        };
    </script>
}


@using (Html.BeginForm("YeniKategori","Kategori",FormMethod.Post)){
    
    <label>Kategori Adı</label>
    
    @Html.TextBoxFor(m => m.KATEGORIAD, new {@class="form-control" })

    @Html.ValidationMessageFor(m => m.KATEGORIAD,"", new {@style="color:red" })
    
    <br/>

    <button class="btn btn-success">Kategoriyi Ekle</button>
    
    
}